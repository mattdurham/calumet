
@model IEnumerable<calumetbase.Models.Event>
@{
    ViewBag.Title = "Index";
    //This specifies the overall layout with the header bar
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Index</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>
    </tr>
    @foreach (calumetbase.Models.Event ev in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(_ => ev.Name)
            </td>
            <td>
                @Html.DisplayFor(_ => ev.StartDate)
            </td>
            <td>
                @Html.DisplayFor(_ => ev.EndDate)
            </td>
            <td>
                @Html.DisplayFor(_ => ev.Comments)
            </td>
        </tr>
    }
    </table>


